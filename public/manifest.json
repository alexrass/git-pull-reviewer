{
  "name": "Git Pull Reviewer",
  "description": "On a git pull page, it will copy a short blurb focusing on review length + urgency",
  "version": "1.1.0",
  "manifest_version": 3,
  "action": { "default_popup": "popup.html" },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://github.com/*"],
  "background":  {
    "service_worker": "worker.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/16px.png",
    "48": "icons/48px.png",
    "128": "icons/128px.png",
    "512": "icons/512px.png"
  }
}
